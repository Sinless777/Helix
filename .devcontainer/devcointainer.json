{
  "name": "Helix (dev)",
  "dockerComposeFile": ["./docker-compose.yaml"],
  "service": "dev-container",
  "workspaceFolder": "/workspaces/helix",

  "runServices": [
    "dev-container",
    "redis",
    "redisinsight",
    "cockroachdb",
    "cockroach-init",
    "mailpit",
    "nginx"
  ],
  "shutdownAction": "stopCompose",

  "initializeCommand": "bash -lc 'docker network inspect helix >/dev/null 2>&1 || docker network create helix'",
  "overrideCommand": false,

  "remoteUser": "vscode",
  "updateRemoteUserUID": true,

  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "20" },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "dind-rootless",
      "moby": true
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "GraphQL.vscode-graphql",
        "GraphQL.vscode-graphql-execution",
        "cweijan.vscode-redis-client",
        "ms-ossdata.vscode-postgresql"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "portsAttributes": {
        "80":   { "label": "NGINX (API proxy)" },
        "3000": { "label": "NestJS (user-service)" },
        "6379": { "label": "Redis" },
        "5540": { "label": "RedisInsight" },
        "26257":{ "label": "CockroachDB (SQL)" },
        "8080": { "label": "Cockroach Console" },
        "8025": { "label": "Mailpit UI" }
      }
    }
  },

  "forwardPorts": [80, 3000, 6379, 5540, 26257, 8080, 8025],

  "containerEnv": {
    "DB_URL": "postgresql://root@cockroachdb:26257/helix?sslmode=disable",
    "REDIS_URL": "redis://redis:6379",
    "MAILPIT_SMTP_HOST": "mailpit",
    "MAILPIT_SMTP_PORT": "1025",
    "API_BASE_URL": "http://nginx"
  },

  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
  ]
}
