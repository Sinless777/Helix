{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "../../dist/libs/hypertune",
    "tsBuildInfoFile": "../../dist/libs/hypertune/tsconfig.lib.tsbuildinfo",
    "module": "es2022",
    "rootDir": "src",
    "lib": ["es2022", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["react", "react-dom", "node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
