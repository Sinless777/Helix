{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../../out-tsc/jest/logger",
    "types": [
      "jest",
      "node"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "rootDir": "../../.."
  },
  "include": [
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}
