{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["Helix"],
    "baseUrl": ".",
    "paths": {
      "@helix/ui/*": ["libs/ui/src/*"],
      "@helix/ui": ["libs/ui/src/index.ts"],
      "@helix/config/*": ["libs/config/src/*"],
      "@helix/config": ["libs/config/src/index.ts"],
      "@helix/utils/*": ["libs/utils/src/*"],
      "@helix/utils": ["libs/utils/src/index.ts"],
      "@helix/types/*": ["libs/types/src/*"],
      "@helix/types": ["libs/types/src/index.ts"],
      "@helix/hypertune/*": ["libs/hypertune/src/*"],
      "@helix/hypertune": ["libs/hypertune/src/index.ts"],
      "@helix/db/*": ["libs/db/src/*"],
      "@helix/db": ["libs/db/src/index.ts"]
    }
  }
}
