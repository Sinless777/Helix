{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["Helix"],
    "baseUrl": ".",
    "paths": {
      "@helix-ai/ui/*": ["libs/ui/src/*"],
      "@helix-ai/ui": ["libs/ui/src/index.ts"],
      "@helix-ai/config/*": ["libs/shared/config/src/*"],
      "@helix-ai/config": ["libs/shared/config/src/index.ts"],
      "@helix-ai/utils/*": ["libs/utils/src/*"],
      "@helix-ai/utils": ["libs/utils/src/index.ts"],
      "@helix-ai/types/*": ["libs/types/src/*"],
      "@helix-ai/types": ["libs/types/src/index.ts"],
      "@helix-ai/hypertune/*": ["libs/hypertune/src/*"],
      "@helix-ai/hypertune": ["libs/hypertune/src/index.ts"],
      "@helix-ai/db/*": ["libs/shared/db/src/*"],
      "@helix-ai/db": ["libs/shared/db/src/index.ts"],
      "@helix-ai/logger/*": ["libs/shared/logger/src/*"],
      "@helix-ai/logger": ["libs/shared/logger/src/index.ts"]
    }
  }
}
